}

.stat-content {
    flex: 1;
}

.stat-number {
    font-size: 2.2rem;
    font-weight: 800;
    color: var(--text-light);
    margin: 0;
    font-family: 'Montserrat', sans-serif;
}

.stat-label {
    font-size: 0.9rem;
    color: var(--text-muted);
    margin: 5px 0 0 0;
    text-transform: uppercase;
