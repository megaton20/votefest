<section class="container chat-container">
 

    <div class="messages-container" id="messages-container">
        <% if (messages && messages.length > 0) { %>
            <% messages.forEach(function(message) { 
                const isFromAdmin = message.is_from_admin;
                const isCurrentUser = !isFromAdmin; // User's own messages
            %>
                <div class="message-wrapper <%= isFromAdmin ? 'message-left' : 'message-right' %>" 
                     data-message-id="<%= message.id %>">
                    <% if (isFromAdmin) { %>
                        <!-- Admin message (left side) -->
                        <div class="message-avatar-left">
                            <div class="avatar-circle-small">
                                <span class="avatar-text-small">A</span>
                            </div>
                        </div>
                    <% } %>
                    
                    <div class="message-content-wrapper">
                        <div class="message-meta">
                            <span class="message-username"><%= message.username || (isFromAdmin ? 'Admin' : 'You') %></span>
