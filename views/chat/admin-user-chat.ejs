<script>
document.addEventListener('DOMContentLoaded', function() {
    // Initialize Socket.IO
    const socket = io({
        withCredentials: true,
        reconnection: true,
        reconnectionAttempts: 5,
        reconnectionDelay: 1000
    });

    const messagesContainer = document.getElementById('messages-container');
    const messageForm = document.getElementById('message-form');
    const messageInput = document.getElementById('message-input');
    const sendButton = document.getElementById('send-button');
    const messageCountElement = document.getElementById('message-count');
    const typingIndicator = document.getElementById('typing-indicator');
    const typingIndicatorContainer = document.getElementById('typing-indicator-container');
    const unreadStatElement = document.querySelector('.unread-stat');
    const onlineStatusElement = document.getElementById('online-status');
    
    // Get current user info
    const currentUserId = '<%= user.id || "admin" %>';
    const currentUsername = '<%= user.username || "Admin" %>';
    const targetUserId = '<%= targetUser?.id %>';
    const targetUsername = '<%= targetUser?.username || "User" %>';
    const targetUserInitial = '<%= targetUser?.username?.charAt(0).toUpperCase() || "U" %>';
    
    // Typing management
    let typingTimeout;
    let isTyping = false;
    let lastTypingTime = 0;
    const TYPING_DEBOUNCE = 300; // ms
    const TYPING_STOP_DELAY = 1000; // ms

    // Polling variables
    let pollingInterval;
    let lastPollingUpdate = new Date().toISOString();

    // Scroll anchor
    let scrollAnchor = document.getElementById('scroll-anchor');
    if (!scrollAnchor) {
        scrollAnchor = document.createElement('div');
        scrollAnchor.id = 'scroll-anchor';
        messagesContainer.appendChild(scrollAnchor);
    }

    // Socket.IO event handlers
    socket.on('connect', () => {
        console.log('‚úÖ Admin connected to chat server');
        updateOnlineStatus('online');
    });

    socket.on('connect_error', (error) => {
        console.error('‚ùå Connection error:', error);
        updateOnlineStatus('offline');
        
        // Fallback to polling
        startPolling();
    });

    socket.on('disconnect', (reason) => {
        console.log('üîå Disconnected:', reason);
        updateOnlineStatus('offline');
    });

    socket.on('new-message', (message) => {
        console.log('üì© New message received:', message);
        
        // Only handle messages for this specific user
        if (message.user_id === targetUserId || (message.is_from_admin && message.user_id === currentUserId)) {
            handleNewMessage(message);
            
            // If it's a new message from user, update unread count
            if (!message.is_from_admin && unreadStatElement) {
                const currentUnread = parseInt(unreadStatElement.textContent) || 0;
                unreadStatElement.textContent = currentUnread + 1;
            }
        }
    });

    socket.on('user-typing', (data) => {
        if (data.userId === targetUserId) {
            showTypingIndicator(data.isTyping);
        }
    });

    socket.on('user-status', (data) => {
        if (data.userId === targetUserId) {
            updateOnlineStatus(data.status);
        }
    });

    socket.on('message-read', (data) => {
        markMessageAsRead(data.messageId);
        
        // Update unread count if message was from this user
        const messageElement = document.querySelector(`[data-message-id="${data.messageId}"]`);
        if (messageElement && messageElement.dataset.userId === targetUserId && unreadStatElement) {
            const currentUnread = parseInt(unreadStatElement.textContent) || 0;
            if (currentUnread > 0) {
                unreadStatElement.textContent = currentUnread - 1;
            }
        }
    });

    socket.on('error', (error) => {
        console.error('Socket error:', error);
        showNotification(error.message || 'An error occurred', 'error');
    });

    socket.on('connected', (data) => {
        console.log('üîó Socket connected with data:', data);
    });

    // Handle new message
    function handleNewMessage(message) {
        console.log('üì® Processing message for display:', message);
        
        // Remove "no messages" placeholder if it exists
        const noMessages = document.querySelector('.no-messages');
        if (noMessages) {
            noMessages.remove();
        }

        // Hide typing indicator when new message arrives
        showTypingIndicator(false);

        // Check if message already exists
        const existingMessage = document.querySelector(`[data-message-id="${message.id}"]`);
        if (existingMessage) {
            console.log('‚ö†Ô∏è Message already exists, skipping');
            return;
        }

        // Create and add message element
        const messageElement = createMessageElement(message);
        
        // Insert before typing indicator if it exists, otherwise before scroll anchor
        const insertBeforeElement = typingIndicatorContainer || scrollAnchor;
        messagesContainer.insertBefore(messageElement, insertBeforeElement);
        
        // Update message count
        if (messageCountElement) {
            messageCountElement.textContent = parseInt(messageCountElement.textContent) + 1;
        }

        // Scroll to bottom
        scrollToBottom();
        
        // Play notification sound for new messages from user
        if (!message.is_from_admin) {
            playNotificationSound();
        }
    }

    // Update online status
    function updateOnlineStatus(status) {
        if (!onlineStatusElement) return;
        
        const statusMap = {
            'online': { text: '‚óè', className: 'online', label: 'Online' },
            'offline': { text: '‚óè', className: 'offline', label: 'Offline' },
            'typing': { text: '‚óè', className: 'typing', label: 'Typing...' }
        };
        
        const statusInfo = statusMap[status] || statusMap.offline;
        onlineStatusElement.textContent = statusInfo.text;
        onlineStatusElement.className = `status-indicator ${statusInfo.className}`;
        
        // Update the label
        const statusLabel = document.querySelector('.stat-header:last-child .stat-label-header');
        if (statusLabel) {
            statusLabel.textContent = statusInfo.label;
        }
    }

    // Create message element
    function createMessageElement(message) {
        const isAdmin = message.is_from_admin;
        const messageWrapper = document.createElement('div');
        messageWrapper.className = `message-wrapper ${isAdmin ? 'message-right' : 'message-left'}`;
        messageWrapper.dataset.messageId = message.id;
        messageWrapper.dataset.userId = message.user_id;
        
        // Format time
        const time = new Date(message.created_at);
        const formattedTime = time.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});
        
        // Determine username
        let username = message.username;
        if (isAdmin) {
            username = 'You';
        } else if (message.user_id === targetUserId) {
            username = targetUsername;
        }
        
        // Build message HTML based on sender
        let messageHTML = '';
        
        if (isAdmin) {
            // Admin message (right side)
            messageHTML = `
                <div class="message-content-wrapper">
                    <div class="message-meta">
                        <span class="message-username">${escapeHtml(username)}</span>
                        <span class="message-time">${formattedTime}</span>
                    </div>
                    <div class="message-bubble admin-bubble">
                        <div class="message-text">
                            ${escapeHtml(message.content)}
                        </div>
                    </div>
                </div>
                <div class="message-avatar-right">
                    <div class="avatar-circle-small admin-avatar">
                        <span class="avatar-text-small">A</span>
                    </div>
                </div>
            `;
        } else {
            // User message (left side)
            messageHTML = `
                <div class="message-avatar-left">
                    <div class="avatar-circle-small">
                        <span class="avatar-text-small">${targetUserInitial}</span>
                    </div>
                </div>
                <div class="message-content-wrapper">
                    <div class="message-meta">
                        <span class="message-username">${escapeHtml(username)}</span>
                        <span class="message-time">${formattedTime}</span>
                    </div>
                    <div class="message-bubble user-bubble">
                        <div class="message-text">
                            ${escapeHtml(message.content)}
                        </div>
                        ${message.is_read ? '<div class="message-status"><span class="read-status">‚úì Read</span></div>' : ''}
                    </div>
                    <div class="message-actions-admin">
                        <button class="mark-read-btn" data-message-id="${message.id}" 
                                title="Mark as read" ${message.is_read ? 'disabled' : ''}>
                            <span class="action-icon">‚úì</span>
                        </button>
                        <button class="delete-message-btn" data-message-id="${message.id}" 
                                title="Delete message">
                            <span class="action-icon">üóëÔ∏è</span>
                        </button>
                    </div>
                </div>
            `;
        }
        
        messageWrapper.innerHTML = messageHTML;
        
        // Add fade-in animation
        messageWrapper.style.opacity = '0';
        messageWrapper.style.transform = isAdmin ? 'translateX(20px)' : 'translateX(-20px)';
        setTimeout(() => {
            messageWrapper.style.transition = 'all 0.3s ease';
            messageWrapper.style.opacity = '1';
            messageWrapper.style.transform = 'translateX(0)';
        }, 10);
        
        return messageWrapper;
    }

    // Escape HTML
    function escapeHtml(text) {
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
    }

    // Scroll to bottom
    function scrollToBottom() {
        scrollAnchor.scrollIntoView({ behavior: 'smooth' });
    }

    // Initial scroll
    setTimeout(scrollToBottom, 100);

    // Typing indicator - Show/hide with proper positioning
    function showTypingIndicator(show) {
        if (show) {
            // Ensure typing indicator container exists
            if (!typingIndicatorContainer) {
                createTypingIndicatorContainer();
            }
            
            // Show the indicator
            typingIndicator.style.display = 'flex';
            
            // Position it after the last user message
            positionTypingIndicator();
            
            // Update online status to typing
            updateOnlineStatus('typing');
            
            // Auto-hide after 3 seconds of no new typing
            clearTimeout(typingIndicator._hideTimeout);
            typingIndicator._hideTimeout = setTimeout(() => {
                showTypingIndicator(false);
                updateOnlineStatus('online');
            }, 3000);
        } else {
            if (typingIndicator) {
                typingIndicator.style.display = 'none';
            }
            updateOnlineStatus('online');
        }
    }

    // Create typing indicator container if it doesn't exist
    function createTypingIndicatorContainer() {
        const container = document.createElement('div');
        container.id = 'typing-indicator-container';
        container.innerHTML = `
            <div id="typing-indicator" class="typing-indicator">
                <div class="typing-dots">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
                <span class="typing-text">${targetUsername} is typing...</span>
            </div>
        `;
        messagesContainer.appendChild(container);
        
        // Update references
        typingIndicatorContainer = container;
        typingIndicator = container.querySelector('#typing-indicator');
    }

    // Position typing indicator after last user message
    function positionTypingIndicator() {
        if (!typingIndicatorContainer) return;
        
        const userMessages = document.querySelectorAll('.message-left');
        if (userMessages.length > 0) {
            const lastUserMessage = userMessages[userMessages.length - 1];
            // Ensure it comes after the last user message
            messagesContainer.insertBefore(typingIndicatorContainer, lastUserMessage.nextSibling);
        }
    }

    // Mark message as read
    function markMessageAsRead(messageId) {
        const messageElement = document.querySelector(`[data-message-id="${messageId}"]`);
        if (messageElement) {
            const messageDiv = messageElement.querySelector('.message-bubble');
            if (!messageDiv.querySelector('.message-status')) {
                messageDiv.innerHTML += '<div class="message-status"><span class="read-status">‚úì Read</span></div>';
            }
            
            // Disable the mark as read button
            const markReadBtn = messageElement.querySelector('.mark-read-btn');
            if (markReadBtn) {
                markReadBtn.disabled = true;
            }
        }
    }

    // Play notification sound
    function playNotificationSound() {
        try {
            const audio = new Audio('/notification.mp3');
            audio.volume = 0.3;
            audio.play().catch(e => console.log('Audio play failed:', e));
        } catch (e) {
            console.log('Notification sound error:', e);
        }
    }

    // Show notification
    function showNotification(message, type = 'info') {
        // Create notification element
        const notification = document.createElement('div');
        notification.className = `notification ${type}`;
        notification.innerHTML = `
            <span>${escapeHtml(message)}</span>
            <button class="notification-close">&times;</button>
        `;
        
        document.body.appendChild(notification);
        
        // Add close functionality
        notification.querySelector('.notification-close').addEventListener('click', () => {
            notification.remove();
        });
        
        // Auto-remove after 5 seconds
        setTimeout(() => {
            if (notification.parentNode) {
                notification.remove();
            }
        }, 5000);
    }

    // Character counter for admin input
    messageInput.addEventListener('input', function() {
        const length = this.value.length;
        const charCountElement = document.getElementById('char-count');
        if (charCountElement) {
            charCountElement.textContent = length;
            
            if (length > 450) {
                charCountElement.style.color = 'var(--accent-red)';
            } else if (length > 400) {
                charCountElement.style.color = '#FF9800';
            } else {
                charCountElement.style.color = 'var(--text-muted)';
            }
        }
    });

    // Form submission
    messageForm.addEventListener('submit', async function(e) {
        e.preventDefault();
        
        const content = messageInput.value.trim();
        
        if (!content) {
            showNotification('Please enter a message', 'error');
            return;
        }
        
        if (content.length > 500) {
            showNotification('Message too long (max 500 characters)', 'error');
            return;
        }

        // Disable input while sending
        messageInput.disabled = true;
        const originalButtonText = sendButton.innerHTML;
        sendButton.innerHTML = '<div class="loading-spinner"></div>';
        sendButton.disabled = true;
        
        try {
            console.log('üì§ Admin sending message to user:', targetUserId);
            
            // Send via Socket.IO
            socket.emit('send-message', {
                content: content,
                targetUserId: targetUserId
            });
            
            // Clear input
            messageInput.value = '';
            
            // Reset character counter
            const charCountElement = document.getElementById('char-count');
            if (charCountElement) {
                charCountElement.textContent = '0';
                charCountElement.style.color = 'var(--text-muted)';
            }
            
            console.log('‚úÖ Admin message sent via Socket.IO');
            
        } catch (error) {
            console.error('‚ùå Error sending message:', error);
            showNotification('Failed to send message', 'error');
            
            // Try HTTP fallback
            try {
                console.log('üîÑ Trying HTTP fallback...');
                const response = await fetch(`/chat/admin/reply/${targetUserId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ content: content })
                });
                
                if (response.ok) {
                    console.log('‚úÖ Message sent via HTTP');
                } else {
                    throw new Error('HTTP send failed');
                }
            } catch (httpError) {
                console.error('‚ùå HTTP fallback also failed:', httpError);
            }
        } finally {
            // Re-enable input
            messageInput.disabled = false;
            sendButton.disabled = false;
            sendButton.innerHTML = originalButtonText;
            messageInput.focus();
        }
    });

    // Mark as read functionality
    messagesContainer.addEventListener('click', async function(e) {
        if (e.target.closest('.mark-read-btn')) {
            const messageId = e.target.closest('.mark-read-btn').dataset.messageId;
            const btn = e.target.closest('.mark-read-btn');
            
            try {
                // Send via Socket.IO
                socket.emit('mark-as-read', { messageId: messageId });
                
                // Update UI immediately
                btn.disabled = true;
                btn.innerHTML = '<span class="action-icon">‚úì</span>';
                
                // Add read status indicator
                const messageWrapper = btn.closest('.message-wrapper');
                const messageDiv = messageWrapper.querySelector('.message-bubble');
                if (!messageDiv.querySelector('.message-status')) {
                    messageDiv.innerHTML += '<div class="message-status"><span class="read-status">‚úì Read</span></div>';
                }
                
                // Update unread count
                if (unreadStatElement) {
                    const currentUnread = parseInt(unreadStatElement.textContent) || 0;
                    if (currentUnread > 0) {
                        unreadStatElement.textContent = currentUnread - 1;
                    }
                }
                
            } catch (error) {
                console.error('Error marking as read:', error);
                alert('Failed to mark as read');
            }
        }
        
        // Delete message functionality
        if (e.target.closest('.delete-message-btn')) {
            if (!confirm('Are you sure you want to delete this message?')) {
                return;
            }
            
            const messageId = e.target.closest('.delete-message-btn').dataset.messageId;
            const messageWrapper = e.target.closest('.message-wrapper');
            
            try {
                const response = await fetch(`/chat/admin/delete/${messageId}`, {
                    method: 'POST'
                });
                
                if (response.ok) {
                    messageWrapper.style.opacity = '0';
                    messageWrapper.style.transform = 'translateX(-20px)';
                    setTimeout(() => {
                        messageWrapper.remove();
                        // Update message count
                        if (messageCountElement) {
                            messageCountElement.textContent = parseInt(messageCountElement.textContent) - 1;
                        }
                    }, 300);
                }
            } catch (error) {
                console.error('Error deleting message:', error);
                alert('Failed to delete message');
            }
        }
    });

    // Enter key handling
    messageInput.addEventListener('keydown', function(e) {
        if (e.key === 'Enter' && !e.shiftKey) {
            e.preventDefault();
            messageForm.dispatchEvent(new Event('submit'));
        }
    });

    // Auto-focus
    messageInput.focus();

    // Polling fallback
    function startPolling() {
        console.log('üîÑ Starting polling fallback for admin');
        
        if (pollingInterval) {
            clearInterval(pollingInterval);
        }
        
        pollingInterval = setInterval(fetchMessages, 3000);
    }
    
    async function fetchMessages() {
        try {
            console.log('üì° Admin polling for new messages...');
            const response = await fetch(`/chat/api/messages?lastUpdate=${lastPollingUpdate}&userId=${targetUserId}`);
            if (response.ok) {
                const data = await response.json();
                
                if (data.messages && data.messages.length > 0) {
                    console.log(`üì© Admin received ${data.messages.length} new messages via polling`);
                    data.messages.forEach(handleNewMessage);
                    lastPollingUpdate = new Date().toISOString();
                }
            }
        } catch (error) {
            console.error('‚ùå Admin polling error:', error);
        }
    }
    
    // Clean up
    window.addEventListener('beforeunload', () => {
        socket.disconnect();
        if (pollingInterval) {
            clearInterval(pollingInterval);
        }
    });

    // Initialize
    setTimeout(scrollToBottom, 100);
    
    // Test Socket.IO connection
    console.log('üöÄ Admin chat interface initialized');
    console.log('üë§ Admin ID:', currentUserId);
    console.log('üéØ Target user ID:', targetUserId);
});
</script>
