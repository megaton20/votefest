
<nav class="bg-white shadow-lg fixed top-0 w-full z-50">
    <div class="container mx-auto px-4 py-3">
        <div class="flex justify-between items-center">
            <a href="/" class="flex items-center space-x-2">
                <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                </svg>
            </a>
            <a href="/wallet" class="flex items-center space-x-2 px-4 py-2 bg-purple-50 rounded-lg">
                <span class="text-purple-700 font-semibold" id="coin-balance"><%= Number(dashboard.balance).toLocaleString("en-US") %></span>
                <span class="text-gray-600">coins</span>
            </a>
        </div>
    </div>
</nav>

<main class="container mx-auto px-4 pt-20 pb-16 max-w-4xl">
    <!-- Profile Card -->
    <div class="bg-gradient-to-r from-purple-600 to-pink-600 rounded-2xl shadow-xl p-6 mb-8 text-white">
        <div class="flex items-center justify-between">
            <div class="flex items-center space-x-4">
                <div class="w-10 h-10 bg-white/20 rounded-full flex items-center justify-center">
                    <span class="text-sm font-bold"><%= user.username.charAt(0).toUpperCase() %></span>
                </div>
                <div>
                    <h1 class="text-2xl font-bold"><%= user.username %></h1>
                    <p class="text-purple-100 text-sm">Wallet: <%= dashboard.wallet_account %></p>
                </div>
            </div>
            <div class="text-right">
                <div class="text-3xl font-bold"><%= Number(dashboard.balance).toLocaleString("en-US") %></div>
                <div class="text-sm text-purple-100">coins available</div>
            </div>
        </div>
    </div>

    <!-- Stats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="bg-white rounded-xl shadow-lg p-6">
            <div class="flex items-center justify-between mb-2">
                <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                </div>
                <span class="text-2xl font-bold text-gray-800"><%= dashboard.total_votes || 0 %></span>
            </div>
            <h3 class="text-gray-600 font-medium">Total Votes Cast</h3>
        </div>


        <div class="bg-white rounded-xl shadow-lg p-6">
            <div class="flex items-center justify-between mb-2">
                <div class="w-10 h-10 bg-yellow-100 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
                    </svg>
                </div>
                <div class="text-right">
                    <span class="text-2xl font-bold text-gray-800"><%= dashboard.loyalty_progress || 0 %></span>
                    <span class="text-sm text-gray-500">/600</span>
                </div>
            </div>
            <h3 class="text-gray-600 font-medium">Loyalty Progress</h3>
            <div class="mt-3 w-full bg-gray-200 rounded-full h-2">
                <div class="bg-yellow-500 h-2 rounded-full" style="width: <%= Math.min(100, (dashboard.loyalty_progress || 0) / 6) %>%"></div>
            </div>
            <p class="text-xs text-gray-500 mt-2">
                <%= 600 - (dashboard.loyalty_progress || 0) %> more votes to earn 50 coins!
            </p>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="bg-white rounded-xl shadow-lg p-6">
        <h5 class="text-sm font-semibold text-gray-800 mb-4 flex items-center">
             Recent Votes
        </h5>
        
        <% if (recentVotes && recentVotes.length > 0) { %>
            <div class="space-y-3">
                <% recentVotes.forEach(vote => { %>
                <div class="flex items-center justify-between p-3 hover:bg-gray-50 rounded-lg transition">
                    <div class="flex items-center space-x-3">
                        <div class="w-8 h-8 bg-purple-100 rounded-full flex items-center justify-center">
                            <span class="text-purple-600">ðŸŽ­</span>
                        </div>
                        <div>
                            <div class="font-medium text-gray-800"><%= vote.contestant_name %></div>
                            <div class="text-xs text-gray-500"><%= new Date(vote.created_at).toLocaleString() %></div>
                        </div>
                    </div>
                    <div class="text-right">
                        <div class="font-semibold text-purple-700">+<%= Number(vote.vote_count).toLocaleString("en-US") %> votes</div>
                        <div class="text-xs text-gray-500"><%= Number(vote.coins_spent).toLocaleString("en-US") %> coins</div>
                    </div>
                </div>
                <% }) %>
            </div>
        <% } else { %>
            <p class="text-center text-gray-500 py-4">No votes yet. Start voting now!</p>
            <a href="/" class="block w-full text-center mt-4 px-4 py-3 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition">
                Browse Contestants
            </a>
        <% } %>
    </div>
</main>

<%- include('./partials/navbottom') %>

