<script>
function purchaseTicket(type) {
    fetch('/tickets/purchase', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ ticketType: type })
    })
    .then(res => res.json())
    .then(data => {
        if (data.success) {
            window.location.href = data.authorization_url;
        } else {
            showNotification(data.error || 'Purchase failed', 'error');
        }
    })
    .catch(err => {
        showNotification('Failed to initiate purchase', 'error');
    });
}

function showQRCode(qrUrl) {
    const modal = document.createElement('div');
    modal.className = 'fixed inset-0 bg-black/50 flex items-center justify-center z-50 p-4';
    modal.innerHTML = `
        <div class="bg-white rounded-2xl p-6 max-w-sm w-full">
            <div class="text-right">
                <button onclick="this.closest('.fixed').remove()" class="text-gray-500 hover:text-gray-700">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                </button>
            </div>
            <div class="text-center">
                <img src="${qrUrl}" alt="QR Code" class="mx-auto w-48 h-48 mb-4">
                <h3 class="font-semibold text-gray-800 mb-2">Your Ticket QR Code</h3>
                <p class="text-sm text-gray-600">Show this at the event entrance</p>
            </div>
        </div>
    `;
    document.body.appendChild(modal);
}
</script>