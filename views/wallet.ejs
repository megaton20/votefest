<script>
// Paystack initialization
const paystackKey = document.querySelector('meta[name="paystack-key"]')?.content || '<%= paystackKey %>';

// Show payment status
function showPaymentStatus(message, type = 'info') {
    const statusDiv = document.getElementById('payment-status');
    statusDiv.className = `mb-6 p-4 rounded-lg ${
        type === 'success' ? 'bg-green-100 border border-green-200 text-green-800' :
        type === 'error' ? 'bg-red-100 border border-red-200 text-red-800' :
        'bg-blue-100 border border-blue-200 text-blue-800'
    }`;
    statusDiv.textContent = message;
    statusDiv.classList.remove('hidden');
    
    // Auto hide after 5 seconds
    setTimeout(() => {
        statusDiv.classList.add('hidden');
    }, 5000);
}

// Fund wallet with Paystack
async function fundWallet(amount) {
    if (!amount || amount < 100) {
        showPaymentStatus('Minimum amount is ‚Ç¶100', 'error');
        return;
    }
    
    const userEmail = '<%= user.email %>';
    const userName = '<%= user.username %>';
    
    // Disable buttons during payment
    const buttons = document.querySelectorAll('button[onclick^="fundWallet"]');
    buttons.forEach(btn => btn.disabled = true);
    
    try {
        showPaymentStatus('Initializing payment...', 'info');
        
        // Initialize payment on server
        const response = await fetch('/wallet/fund', {
            method: 'POST',
            headers: { 
                'Content-Type': 'application/json',
                'Accept': 'application/json'
            },
            body: JSON.stringify({ amount })
        });
        
        const data = await response.json();
        
        if (data.success && data.authorization_url) {
            // Redirect to Paystack payment page
            window.location.href = data.authorization_url;
        } else {
            showPaymentStatus(data.error || 'Payment initialization failed', 'error');
        }
    } catch (error) {
        console.error('Payment error:', error);
        showPaymentStatus('Failed to initialize payment. Please try again.', 'error');
    } finally {
        // Re-enable buttons
        buttons.forEach(btn => btn.disabled = false);
    }
}



// Transfer coins
async function transferCoins() {
    const receiverWallet = document.getElementById('receiver-wallet').value.trim();
    const amount = document.getElementById('transfer-amount').value;
    
    if (!receiverWallet || !amount) {
        showPaymentStatus('Please fill all fields', 'error');
        return;
    }
    
    if (amount < 10) {
        showPaymentStatus('Minimum transfer is 10 coins', 'error');
        return;
    }
    
    // Validate wallet format
    if (!receiverWallet.match(/^ACC\d{6}$/)) {
        showPaymentStatus('Invalid wallet format. Should be ACC followed by 6 digits (e.g., ACC123456)', 'error');
        return;
    }
    
    const transferBtn = document.querySelector('button[onclick="transferCoins()"]');
    transferBtn.disabled = true;
    transferBtn.innerHTML = '<span class="inline-block animate-spin mr-2">‚è≥</span> Transferring...';
    
    try {
        const response = await fetch('/wallet/transfer', {
            method: 'POST',
            headers: { 
                'Content-Type': 'application/json',
                'Accept': 'application/json'
            },
            body: JSON.stringify({ receiverWallet, amount })
        });
        
        const data = await response.json();
        
        if (data.success) {
            showPaymentStatus(data.message, 'success');
            
            // Update balance
            const walletBalance = document.getElementById('wallet-balance');
            const currentBalance = parseInt(walletBalance.textContent);
            walletBalance.textContent = (currentBalance - parseInt(amount)).toLocaleString();
            
            // Clear form
            document.getElementById('receiver-wallet').value = '';
            document.getElementById('transfer-amount').value = '';
            
            // Reload page after 2 seconds to show updated transaction history
            setTimeout(() => location.reload(), 2000);
        } else {
            showPaymentStatus(data.error || 'Transfer failed', 'error');
        }
    } catch (error) {
        console.error('Transfer error:', error);
        showPaymentStatus('Transfer failed. Please try again.', 'error');
    } finally {
        transferBtn.disabled = false;
        transferBtn.innerHTML = 'Transfer Coins';
    }
}

// Check URL parameters for payment status
document.addEventListener('DOMContentLoaded', function() {
    const urlParams = new URLSearchParams(window.location.search);
    const success = urlParams.get('success');
    const error = urlParams.get('error');
    
    if (success) {
        showPaymentStatus(success, 'success');
        // Remove the query parameter
        window.history.replaceState({}, document.title, '/wallet');
    }
    
    if (error) {
        showPaymentStatus(error, 'error');
        window.history.replaceState({}, document.title, '/wallet');
    }
});
</script>